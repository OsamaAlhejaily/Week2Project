@model List<amazonsa.Models.Order>

<h2>Order History for @ViewBag.UserName (@ViewBag.Email)</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Date</th>
            <th>Total Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderID</td>
                <td>@order.OrderDate</td>
                <td>@order.TotalAmount</td>
            </tr>
        }
    </tbody>
</table>
